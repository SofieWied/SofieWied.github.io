{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "EU Countries: Pension Expenditure as % of GDP (2012-2023)",
    "anchor": "start",
    "subtitle": "Source: Eurostat API",
    "fontSize": 22,
    "subtitleFontSize": 14,
    "color": "#333",
    "subtitleColor": "#666"
  },
  "width": 600,
  "height": 600,
  "background": "#faf8f3",
  "config": {
    "font": "Calibri"
  },
  "params": [
    {
      "name": "yearSlider",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2012,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/SofieWied/SofieWied.github.io/refs/heads/main/project_chart3_eurostat_pension_data.json"
  },
  "transform": [
    {
      "filter": "datum.year == yearSlider"
    },
    {
      "lookup": "geo",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/leakyMirror/map-of-europe/master/GeoJSON/europe.geojson",
          "format": {
            "type": "json",
            "property": "features"
          }
        },
        "key": "properties.ISO2",
        "fields": ["type", "properties", "geometry"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "scale": {
        "scheme": "viridis",
        "domain": [5, 15]
      },
      "title": "% of GDP",
      "legend": {
        "labelColor": "#333",
        "titleColor": "#333",
        "orient": "top-right",
        "direction": "vertical",
        "gradientLength": 200,
        "gradientThickness": 15,
        "format": ".1f",
        "titleFontSize": 12,
        "labelFontSize": 11
      }
    },
    "tooltip": [
      {
        "field": "country",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "geo",
        "type": "nominal",
        "title": "Code"
      },
      {
        "field": "value",
        "type": "quantitative",
        "title": "Pension Expenditure (%)",
        "format": ".2f"
      },
      {
        "field": "year",
        "type": "quantitative",
        "title": "Year"
      }
    ]
  },
  "projection": {
    "type": "mercator",
    "scale": 600,
    "center": [15, 54]
  }
}