{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Nuclear Power Output in Germany and France (1970-2022)",
    "anchor": "start",
    "subtitle": "Source: IEA via ECO-API",
    "fontSize": 22,
    "subtitleFontSize": 16,
    "color": "#333",
    "subtitleColor": "#333"
  },
  "height": 350,
  "width": 600,
  "background": "#faf8f3",
  "config": {
    "font": "Calibri"
  },
  "view": {
    "fill": "#faf8f3",
    "strokeOpacity": 0
  },
  "data": {
    "url": "https://api.economicsobservatory.com/deu/nGwh?vega",
    "format": {
      "type": "json"
    }
  },
  "transform": [
    {
      "calculate": "'Germany'",
      "as": "country"
    },
    {
      "calculate": "datum.value / 1000",
      "as": "value_thousands"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "point": true
      },
      "encoding": {
        "color": {
          "field": "country",
          "type": "nominal",
          "scale": {
            "domain": ["Germany", "France"],
            "range": ["#C96763", "#0173B2"]
          },
          "legend": {
            "title": null,
            "orient": "bottom-right",
            "labelColor": "#333",
            "labelFontSize": 14,
            "symbolType": "stroke",
            "symbolStrokeWidth": 3,
            "offset":10
          }
        }
      }
    },
    {
      "data": {
        "url": "https://api.economicsobservatory.com/fra/nGwh?vega",
        "format": {
          "type": "json"
        }
      },
      "transform": [
        {
          "calculate": "'France'",
          "as": "country"
        },
        {
          "calculate": "datum.value / 1000",
          "as": "value_thousands"
        }
      ],
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "point": true
      },
      "encoding": {
        "color": {
          "field": "country",
          "type": "nominal",
          "scale": {
            "domain": ["Germany", "France"],
            "range": ["#C96763", "#0173B2"]
          },
          "legend": {
            "title": null,
            "orient": "bottom-right",
            "labelColor": "#333",
            "labelFontSize": 14,
            "symbolType": "stroke",
            "symbolStrokeWidth": 3
          }
        }
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {
        "title": "",
        "titleColor": "#333",
        "labelColor": "#333",
        "grid": false
      }
    },
    "y": {
      "field": "value_thousands",
      "type": "quantitative",
      "axis": {
        "title": "Output (Thousand GWh)",
        "titleColor": "#333",
        "labelColor": "#333",
        "grid": true,
        "gridColor": "#e0e0e0",
        "gridOpacity": 0.5
      }
    },
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {"field": "date", "type": "temporal", "title": "Date"},
      {"field": "value_thousands", "type": "quantitative", "title": "Output (Thousand GWh)", "format": ".1f"}
    ]
  }
}